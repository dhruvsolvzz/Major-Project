# MongoDB Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/redbridge?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=development

# AI Extraction Configuration (Optional)
USE_AI_EXTRACTION=false
AI_PROVIDER=ollama

# Ollama Configuration (Local, Free)
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=llama3.2-vision

# OpenAI Configuration (Cloud, Paid)
# AI_PROVIDER=openai
# OPENAI_API_KEY=sk-your-api-key-here
# OPENAI_MODEL=gpt-4o-mini

# Groq Configuration (Cloud, Free Tier)
# AI_PROVIDER=groq
# GROQ_API_KEY=your-groq-api-key
# GROQ_MODEL=llama-3.3-70b-versatile

# Aadhaar Validation
AADHAAR_STRICT_MODE=false

# File Upload
MAX_FILE_SIZE=10485760
